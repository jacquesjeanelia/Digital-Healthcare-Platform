{
  "version": 2,
  "builds": [
    {
      "src": "sehaty-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd sehaty-frontend && npm install && npm run build",
        "outputDirectory": "sehaty-frontend/dist"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/sehaty-frontend/dist/$1"
    }
  ]
} 